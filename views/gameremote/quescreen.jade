extends ../layoutmobile

block append head 
  script(src='/javascripts/gameremote/quescreen/controller.js')

block title
  title Question Screen

block main
  div(ng-controller="quescreen-cont", ng-init="init(#{ JSON.stringify(params) })" )
    h1 The Question
    h1 {{ respond }}
    h2= params.que
    h3 Number of letters is {{ params.count }}
    input(type="text" ng-model="answer")
    button(ng-click="sendAnswer()") Send Answer
