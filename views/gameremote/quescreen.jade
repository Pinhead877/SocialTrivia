extends ../layoutmobile

block append head 
  script(src='/javascripts/gameremote/quescreen/controller.js')

block title
  title Question Screen

block main
  div(ng-controller="quescreen-cont", ng-init="params= #{ JSON.stringify(params) } " )
    h1 The Question
    h1(ng-bind="respond")
    h2= params.que
    h3 Number of letters is #{params.count}
    
    button(ng-click="sendok()") Yes
    button(ng-click="sendno()") No
